<h3 class="page-header">
  <%= @category.title %>
</h3>

<% @category.websites.each do |site| %>
  <div class="promo">
    <h4><%= site.title %></h4>
    <p>Адрес: <a href="<%= site.url %>" target="_blank"><%= site.url %></a></p>
    <%= image_tag site.image.url(:medium) %>
    <hr/>
    <p>
      <%= site.description %>
    </p>
  </div>
<% end %>